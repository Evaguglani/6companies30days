#include<bits/stdc++.h>
using namespace std;

class Solution {
  public:
    int findPosition(int N , int M , int K) {
        // code here
        
        if(M+K-1<=N)
        {
            return M+K-1;
        }
        return ((M-(N-K+2))%(N))+1 ;
    }
};
int main() 
{
    int t;
    cin >> t;
    while (t--) {
        int N,M,K;
        
        cin>>N>>M>>K;

        Solution ob;
        cout << ob.findPosition(N,M,K) << endl;
    }
    return 0;
} 
